{
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "ESNext",
      "esModuleInterop": true
    },
    "esm": true // <--- this is the most important part
  },
  "compilerOptions": {
    "target": "es6",
    "skipLibCheck": true,
    "lib": ["ES6", "dom"],
    "rootDir": ".",
    "allowImportingTsExtensions": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "declaration": false,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node"],
    "stripInternal": true,
    "incremental": true,
    "skipDefaultLibCheck": true,
    "inlineSourceMap": false,
    "noEmit": false
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
